	</bean>
	
	<bean id="sqlSessionTemplateForReadWrite" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryForReadWrite"/>
	</bean>

     <tx:annotation-driven transaction-manager="transactionManager" />
